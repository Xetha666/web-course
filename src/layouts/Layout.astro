---
import BaseHead from "@/components/BaseHead.astro";
import "@/styles/global.css";

interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<BaseHead title={title} />
	<body>
		<slot />
	</body>
</html>

<style is:global>
	/* Reset de estilos para html y body */
	html,
	body {
		font-family: "GeistSans", sans-serif;
		width: 100%;
		height: 100%;
		overflow-x: hidden;
	}
</style>