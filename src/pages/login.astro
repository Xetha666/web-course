---
import Layout from "@/layouts/Layout.astro";
import Mail from "@/assets/svg/mail.svg";
import Padlock from "@/assets/svg/padlock.svg";
import GoogleIcon from "@/assets/svg/google.svg";
import EyeButton from "@/components/EyeButton.astro";
import SubmitButton from "@/components/SubmitButton.astro";

/*export const prerender = false; // Innecesario en modo 'server' */

---

<Layout title="Login">
    <div class="min-h-screen bg-linear-to-br from-background to-muted flex items-center justify-center p-4">
        <div class="w-full max-w-md">
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold text-foreground mb-2">Iniciar Sesión</h1>
                <p class="text-muted-foreground">Accede a tu cuenta para continuar con tus cursos</p>
            </div>
            
            <div class="w-full shadow-lg border-0 rounded-lg bg-card/50 backdrop-blur-sm">
                <div class="space-y-1 text-center p-6">
                    <h2 class="text-2xl font-bold text-foreground">Bienvenido de vuelta</h2>
                    <p class="text-sm text-muted-foreground">Ingresa tus credenciales para acceder a tu cuenta</p>
                </div>

                <form>
                    <div class="space-y-4 p-6 pt-0">

                        <!--CorreoElectronico-->
                        <div class="space-y-2">
                            <label for="email" class="text-sm font-medium text-foreground block">
                                Correo Electrónico
                            </label>
                            <div class="relative">
                                <div class="absolute left-3 top-3 text-muted-foreground">
                                    <Mail/>
                                </div>
                                <input id="email" type="email" placeholder="tu@email.com" required class="pl-10 h-12 bg-background/50 border border-border focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20 w-full rounded-md px-3 py-2 text-foreground transition-colors"/>
                            </div>
                        </div>

                        <!--Contraseña-->
                        <div class="space-y-2">
                            <label for="password" class="text-sm font-medium text-foreground block">
                                Contraseña
                            </label>
                            <div class="relative">
                                <div class="absolute left-3 top-3 text-muted-foreground">
                                    <Padlock/>
                                </div>
                                <input id="password" type="password" placeholder="••••••••" required class="pl-10 pr-10 h-12 bg-background/50 border border-border focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20 w-full rounded-md px-3 py-2 text-foreground transition-colors"/>
                                <EyeButton/>
                            </div>
                        </div>

                        <div class="flex items-center justify-between text-sm">
                            <label class="flex items-center space-x-2 cursor-pointer">
                                <input type="checkbox" class="rounded border-border text-primary focus:ring-primary w-4 h-4 cursor-pointer" />
                                <span class="text-muted-foreground">Recordarme</span>
                            </label>
                            <a href="/forgot-password" class="text-primary hover:text-primary/80 transition-colors">
                                ¿Olvidaste tu contraseña?
                            </a>
                        </div>
                    </div>                                       

                    <div class="flex flex-col space-y-3 p-6 pt-0">

                        <SubmitButton/>                        

                        <div class="text-center text-sm text-muted-foreground">
                            <span>¿No tienes una cuenta?</span>
                            <a href="/register" class="text-primary hover:text-primary/80 font-medium transition-colors">
                                Regístrate aquí
                            </a>
                        </div>

                        <!-- Separador -->
                        <div class="flex items-center px-6">
                            <div class="flex-1 border-t border-border"></div>
                            <span class="px-4 text-sm text-muted-foreground">O continúa con</span>
                            <div class="flex-1 border-t border-border"></div>
                        </div>  

                        <!-- Botón de Google -->
                        <div class="px-6 space-y-2">
                            <button id="login" type="button" class="cursor-pointer w-full h-12 bg-white hover:bg-gray-50 border border-gray-300 rounded-md flex items-center justify-center space-x-3 transition-all duration-200 shadow-sm hover:shadow-md group">
                                <GoogleIcon/>
                                <span class="text-gray-700 font-medium text-sm group-hover:text-gray-900">Continuar con Google</span>
                            </button>                    
                        </div>                        

                        <!--Go to home-->
                        <div class="text-center">
                            <a href="/" class="text-sm text-muted-foreground hover:text-foreground transition-colors inline-flex items-center space-x-1">
                                <span>← Volver al inicio</span>
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</Layout>

<script>
    import { signIn } from "auth-astro/client"     
    
    const login = document.getElementById("login") as HTMLButtonElement

        if(login){
            login.onclick = () => signIn("google")
        }    
</script>