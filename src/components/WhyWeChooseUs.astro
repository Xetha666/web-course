---
import {ReasonsData} from '@/data/reasons.ts';
import IconUsers from '@/assets/svg/users.svg';
import IconClock from '@/assets/svg/clock.svg';
import IconAward from '@/assets/svg/award.svg';
import IconHeadPhone from '@/assets/svg/headphones.svg';

const iconComponents: Record<string, any> = {
  Users: IconUsers,
  Clock: IconClock,
  Award: IconAward,
  Headphones: IconHeadPhone,
};
---

<section id="Nosotros" class="bg-background py-20">
  <div class="mx-auto px-4 sm:max-w-160 md:max-w-3xl lg:max-w-5xl xl:max-w-7xl 2xl:max-w-384">
    <div class="mb-16 space-y-4 text-center">
      <h2 class="text-3xl font-bold text-balance lg:text-5xl">
        ¿Por qué elegir <span class="text-primary">TechAcademy</span>?
      </h2>
      <p class="text-muted-foreground mx-auto max-w-2xl text-xl text-pretty">
        Más que cursos, ofrecemos una experiencia de aprendizaje completa
        diseñada para tu éxito profesional.
      </p>
    </div>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4">
      {
        ReasonsData.map((reason) => {
          const Icon = iconComponents[reason.icon];

          return (
            <div class="bg-card text-card-foreground hover:border-primary/50 group flex flex-col gap-6 rounded-xl border-2 border-color/15 border-solid py-6 shadow-sm transition-colors">
              <div class="space-y-4 p-6 text-center">
                <div class="bg-primary/10 group-hover:bg-primary/20 mx-auto flex h-16 w-16 items-center justify-center rounded-full transition-colors">
                  <Icon class="text-primary h-8 w-8" />
                </div>
                <h3 class="text-xl font-semibold">{reason.title}</h3>
                <p class="text-muted-foreground leading-relaxed text-pretty">
                  {reason.description}
                </p>
              </div>
            </div>
          )
        })
      }
    </div>
  </div>
</section>
