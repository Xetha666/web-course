---
import ADVANTAGES from '@/utils/Advantages.json';
import IconCheckCircle from '@/assets/svg/check-circle.svg';
import IconTrendingUp from '@/assets/svg/trending-up.svg';
import IconBriefcase from '@/assets/svg/brief-case.svg';
import IconGlobe from '@/assets/svg/globe.svg';

const iconComponents: Record<string, any> = {
  CheckCircle: IconCheckCircle,
  TrendingUp: IconTrendingUp,
  Briefcase: IconBriefcase,
  Globe: IconGlobe,
};
---

<section class="bg-muted/30 py-20">
  <div class="mx-auto px-6 sm:max-w-160 md:max-w-3xl lg:max-w-5xl xl:max-w-7xl 2xl:max-w-384">
    <div class="mb-16 space-y-4 text-center">
      <h2 class="text-3xl font-bold text-balance lg:text-5xl">
        Ventajas que nos <span class="text-primary">Distinguen</span>
      </h2>
      <p class="text-muted-foreground mx-auto max-w-2xl text-xl text-pretty">
        Descubre por qué miles de profesionales han transformado sus carreras
        con nosotros.
      </p>
    </div>

    <div class="grid gap-8 lg:grid-cols-2">
      {
        ADVANTAGES.map((advantage) => {
          const Icon = iconComponents[advantage.icon];
          return (
            <article class="bg-card text-card-foreground group border-border flex flex-col gap-6 rounded-xl border-2 py-6 shadow-sm transition-all duration-300 hover:shadow-lg">
              <div class="p-8">
                <div class="flex items-start space-x-6">
                  <div class="shrink-0">
                    <div class="bg-primary/10 group-hover:bg-primary/20 flex h-14 w-14 items-center justify-center rounded-xl transition-colors">
                      <Icon class="text-primary size-7" />
                    </div>
                  </div>
                  <div class="flex-1 space-y-3">
                    <h3 class="text-2xl font-semibold">{advantage.title}</h3>
                    <p class="text-muted-foreground leading-relaxed text-pretty">
                      {advantage.description}
                    </p>
                    <div class="bg-primary/10 text-primary inline-flex items-center rounded-full px-3 py-1 text-sm font-medium">
                      {advantage.stats}
                    </div>
                  </div>
                </div>
              </div>
            </article>
          );
        })
      }
    </div>
    
    {/* Call to action */}
    <div class="mx-auto mt-16 text-center">
      <div
        class="text-muted-foreground mb-4 inline-flex items-center space-x-2 text-sm"
      >
        <IconCheckCircle class="text-primary size-4" />
        <span>Garantía de satisfacción de 30 días</span>
      </div>
    </div>

  </div>
</section>
