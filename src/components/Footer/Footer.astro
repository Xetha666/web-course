---
import Logo from '@/assets/svg/logo.svg';
import DataLinks from '@/utils/FooterSocialLinks.json'
import DataFooter from '@/utils/dataFooter.json'

interface SocialLink {
  name: string;
  href: string;
  icon: string;
  ariaLabel: string;
}
const socialLinks: SocialLink[] = DataLinks

interface FooterColumn {
  title: string;
  links: LinkItem[];
}

interface LinkItem {
  text: string;
  href: string;
}

const footerNavData: FooterColumn[] = DataFooter
---

<footer class="bg-neutral-950/90 text-white">{/*mt-20*/}
  <div class="mx-auto max-w-7xl px-4 py-16 sm:max-w-160 md:max-w-3xl lg:max-w-5xl xl:max-w-7xl 2xl:max-w-384">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4 mb-12">
      
      <div class="flex flex-col gap-4">
        <div class="flex items-center gap-2">
          <Logo/>
          <span class="text-xl font-bold">TechAcademy</span>
        </div>
        
        <p class="text-gray-400 text-sm leading-relaxed">
          Transformamos vidas a trav√©s de la educaci√≥n tecnol√≥gica. √önete a miles de profesionales que han cambiado su futuro con nosotros
        </p>

        <div class="flex items-center gap-2 mt-2">
          {socialLinks.map((social) => (
            <a 
              href={social.href}
              class="p-2 rounded-full bg-gray-800 hover:bg-accent transition-colors duration-300"
              aria-label={social.ariaLabel}
            >
              <svg 
                class="size-5 object-contain shrink-0"
                viewBox="0 0 24 24" 
                fill="none" 
                stroke="currentColor" 
                stroke-width="2"
                stroke-linecap="round" 
                stroke-linejoin="round"
              >
                {social.name === 'Instagram' ? (
                  <>
                    <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                    <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
                  </>
                ) : (
                  <path d={social.icon}></path>
                )}
              </svg>
            </a>
          ))}
        </div>
      </div>
      
      {footerNavData.map((column) => (
        <div class="flex flex-col gap-4">
          <h3 class="text-lg font-semibold mb-2">{column.title}</h3>
          <ul class="space-y-2">
            {column.links.map((item) => (
              <li>
                <a 
                  href={item.href} 
                  class="text-gray-400 hover:text-accent transition-colors duration-200 text-sm"
                >
                  {item.text}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
      
    </div>

    <div class="border-t border-gray-800 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-gray-400">
        <p>&copy; 2025 TechAcademy. Todos los derechos reservados.</p>
