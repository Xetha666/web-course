---
import HeroImage from '@/assets/images/hero-image.webp'
import Star from '@/assets/svg/star-icon.svg';
import Play from '@/assets/svg/play-icon.svg';
---

<section class="from-background to-muted relative bg-linear-to-br py-20 lg:py-32">
  <div class="mx-auto px-4 sm:max-w-160 md:max-w-3xl lg:max-w-5xl xl:max-w-7xl 2xl:max-w-384">
    <div class="grid items-center gap-12 lg:grid-cols-2 shrink-0">
      {/* Content */}
      <div class="space-y-8">
          <div class="space-y-4">
            <h1 class="text-4xl leading-tight font-bold text-balance lg:text-6xl">
              Domina la <span class="text-primary">Tecnología</span> del Futuro
            </h1>
            <p class="text-muted-foreground text-xl leading-relaxed text-pretty">
              Aprende programación, desarrollo web, inteligencia artificial y más
              con nuestros cursos diseñados por expertos de la industria.
            </p>
          </div>

          {/* Stats */}
          <div class="flex items-center space-x-6">
            <div class="flex items-center space-x-1">
              <div class="flex">
                {
                  [...Array(5)].map(() => (
                    <Star/>
                  ))
                }
              </div>
              <span class="text-muted-foreground ml-2 text-sm">4.9/5 (2,500+ reseñas)</span>
            </div>
          </div>

          {/* CTA Buttons */}
          <div class="flex flex-col gap-4 sm:flex-row">
            <button
              class="cursor-pointer focus-visible:border-ring focus-visible:ring-ring/50 aria-invalid:ring-destructive/20 dark:aria-invalid:ring-destructive/40 aria-invalid:border-destructive bg-primary text-primary-foreground hover:bg-primary/90 inline-flex h-10 shrink-0 items-center justify-center gap-2 rounded-md px-8 text-lg font-medium whitespace-nowrap transition-all outline-none focus-visible:ring-[3px] disabled:pointer-events-none disabled:opacity-50 has-[>svg]:px-4 [&_svg]:pointer-events-none [&_svg]:shrink-0 [&_svg:not([class*='size-'])]:size-4">
              Explorar Cursos
            </button>

            <button class="focus-visible:border-ring focus-visible:ring-ring/50 aria-invalid:ring-destructive/20 dark:aria-invalid:ring-destructive/40 aria-invalid:border-destructive hover:bg-accent hover:text-accent-foreground inline-flex h-10 shrink-0 items-center justify-center gap-2 rounded-md border bg-transparent px-8 text-lg font-medium whitespace-nowrap shadow-xs transition-all outline-none focus-visible:ring-[3px] disabled:opacity-50 has-[>svg]:px-4 [&_svg]:pointer-events-none [&_svg]:shrink-0 [&_svg:not([class*='size-'])]:size-4">
              <Play/>
              Ver Demo
            </button>

          </div>
          {/* Trust indicators */}
          <div class="pt-8">
            <p class="text-muted-foreground mb-4 text-sm">Confían en nosotros:</p>
            <div class="flex items-center space-x-8 opacity-60">
              <span class="font-semibold">Google</span>
              <span class="font-semibold">Microsoft</span>
              <span class="font-semibold">Amazon</span>
              <span class="font-semibold">Meta</span>
            </div>
          </div>
      </div>

      {/* Hero Image */}
      <div class="relative">
        <div class="from-primary/20 to-secondary/20 aspect-square rounded-2xl bg-linear-to-br p-8">
          <img
            src={HeroImage.src}
            alt="Estudiantes aprendiendo programación"
            class="h-full w-full rounded-xl object-cover"
          />
        </div>
        {/* Floating elements */}
        <div class="bg-primary text-primary-foreground absolute -top-4 -right-4 rounded-full px-4 py-2 text-sm font-semibold">
          +10,000 estudiantes
        </div>
        <div class="bg-secondary text-secondary-foreground absolute -bottom-4 -left-4 rounded-full px-4 py-2 text-sm font-semibold">
          Certificación oficial
        </div>
      </div>
    </div>
  </div>
</section>
