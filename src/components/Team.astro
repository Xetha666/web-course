---
import {TeamData} from '@/data/team.ts';
---

<section class="py-20 px-4 sm:px-6 lg:px-8">
		<div class="max-w-6xl mx-auto">
			<h2 class="text-4xl font-bold text-foreground text-center mb-16">Nuestro Equipo</h2>        
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
				{TeamData.map((member) => (
					<div class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow text-center">                    
						<div class="w-20 h-20 bg-linear-to-br from-amber-400 to-amber-600 rounded-full mx-auto mb-4 overflow-hidden">                        
							<img alt={member.alt} class="w-full h-full object-cover" src={member.imagenUrl} loading="lazy"/>
						</div>                    
						<h3 class="text-xl font-bold text-foreground mb-1">{member.nombre}</h3>                    
						<p class="text-amber-600 font-semibold mb-2">{member.titulo}</p>                    
						<p class="text-sm text-muted-foreground">{member.especialidad}</p>
					</div>
				))}
			</div>
		</div>
	</section>